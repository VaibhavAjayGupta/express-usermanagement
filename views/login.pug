extends layout
block content
  h1 #{title} 
  != messages('message', locals)
  if errors
    each error, i in errors
      div(class="alert alert-danger") #{error.msg}
  form(method='POST' action='')
    .form-group
      label(for='username') Username
      input#username.form-control(type='text', name='username' required='true', placeholder='Username', value=(user===undefined ? '' : user.username))
    .form-group
      label(for='password') Password
      input#password.form-control(type='password', name='password' required='true', placeholder='Password')
    button.btn.btn-primary(type='submit') Submit


